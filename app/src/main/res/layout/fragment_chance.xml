<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack2"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/colorDeepSkyBlue" />

    <RelativeLayout
        android:id="@+id/layoutHeadChance"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorDeepSkyBlue">

        <TextView
            android:id="@+id/textViewHeadChance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="货币ETF基金"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPanel2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="指数代码"
            android:textColor="@color/colorgray81"
            android:textSize="13sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:gravity="left"
            android:paddingLeft="8dp"
            android:text="最新"
            android:textColor="@color/colorgray81"
            android:textSize="13sp" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:gravity="left"
            android:paddingLeft="8dp"
            android:text="日收益"
            android:textColor="@color/colorgray81"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="年化收益"
            android:textColor="@color/colorgray81"
            android:textSize="13sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/listViewChance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/colorDivider"
        android:dividerHeight="1dp" />

</LinearLayout>