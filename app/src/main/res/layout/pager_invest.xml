<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/layoutInvestValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrange"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/textViewInvestQuota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="420.65"
            android:textColor="@color/colorWhite"
            android:textSize="50dp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/textViewInvestQuotap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewInvestQuota"
            android:gravity="center"
            android:text="定投额度(元)"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/textViewInvestRealPoint"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewInvestQuotap"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="6420.43"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/textViewInvestRealPointp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewInvestRealPoint"
            android:gravity="center"
            android:text="当前点位"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/textViewInvestBasePoint"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/textViewInvestQuotap"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="7356"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/textViewInvestBasePointp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textViewInvestBasePoint"
            android:gravity="center"
            android:text="本周基点"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutInvestOutput0"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/layoutInvestValue">

        <TextView
            android:id="@+id/textViewInvestProperty"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="8725.8"
            android:textColor="@color/colorOrange"
            android:textSize="16sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="总资产" />

        <TextView
            android:id="@+id/textViewInvestYield"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="-4.37%"
            android:textColor="@color/colorOrange"
            android:textSize="16sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="95dp"
            android:gravity="center"
            android:text="总收益" />

        <TextView
            android:id="@+id/textViewInvestKeyPoint"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="95dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="8047.11"
            android:textColor="@color/colorOrange"
            android:textSize="16sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="95dp"
            android:gravity="center"
            android:text="关键位" />

        <TextView
            android:id="@+id/textViewInvestKeyRatio"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="25.49%"
            android:textColor="@color/colorOrange"
            android:textSize="16sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="关键比" />
    </RelativeLayout>

    <View
        android:id="@+id/layoutInvestDivider0"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/layoutInvestOutput0"
        android:background="@color/colorItemDivider" />

    <RelativeLayout
        android:id="@+id/layoutInvestOutput1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/layoutInvestDivider0">

        <TextView
            android:id="@+id/textViewInvestProperty1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="10653.8"
            android:textColor="@color/colorOrange"
            android:textSize="16sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="总资产" />

        <TextView
            android:id="@+id/textViewInvestYield1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="-5.13%"
            android:textColor="@color/colorOrange"
            android:textSize="16sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="95dp"
            android:gravity="center"
            android:text="总收益" />

        <TextView
            android:id="@+id/textViewInvestKeyPoint1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="95dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="15036.11"
            android:textColor="@color/colorOrange"
            android:textSize="16sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="95dp"
            android:gravity="center"
            android:text="关键位" />

        <TextView
            android:id="@+id/textViewInvestKeyRatio1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="186.35%"
            android:textColor="@color/colorOrange"
            android:textSize="16sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="关键比" />
    </RelativeLayout>

    <View
        android:id="@+id/layoutInvestDivider1"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/layoutInvestOutput1"
        android:background="@color/colorItemDivider" />

    <Button
        android:id="@+id/buttonPagerInvest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorLightGrey"
        android:text="数据更新"
        android:textColor="@color/colorGreen"
        android:textSize="16sp" />

</RelativeLayout>