<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"

    android:gravity="center|left"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutChanceStocks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/shape_chance_stocks">

        <TextView
            android:id="@+id/textViewChanceName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="贵州茅台"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/textViewChanceCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="600519"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textViewChancePrice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="1798.88"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textViewChanceRatio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="1.98%"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textViewChanceProb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="98.8%"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:textStyle="normal" />
    </LinearLayout>
</LinearLayout>